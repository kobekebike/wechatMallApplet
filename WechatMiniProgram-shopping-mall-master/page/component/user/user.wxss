@import '../../common/styles/common.wxss';

.userinfo {
	display: flex;
	flex-direction: column;
	padding: 30rpx 0;
	align-items: center;
	background: #70d1c9;
}

.userinfo-avatar {
	width: 128rpx;
	height: 128rpx;
	border-radius: 50%;
}

.userinfo-nickname {
	color: #fff;
}

.userinfo-btn {
  width:128rpx;
  height:128rpx;
  padding:0rpx;
  border-radius:50%;
}

.list-box{
    border-bottom: 1rpx solid #ededed;
    color: rgb(100, 100, 100);
    line-height: 90rpx;
    font-size: 28rpx;
}
.list-box .list-manage{
    position: relative;
    height: 90rpx;
    text-align: left;
    margin-left: 20rpx;
}
.list-box .list-manage::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.list-order-box{
    color: rgb(100, 100, 100);
    line-height: 90rpx;
    font-size: 28rpx;
}
.list-order-box .list-order{
    position: relative;
    height: 90rpx;
    text-align: left;
    margin-left: 20rpx;
}

.list-manage-image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
  margin-bottom: -8rpx;
}

.orders-list{
    padding-left: 30rpx;
    border-bottom: 20rpx solid #ededed;
}
.orders-list:last-child{
    border-bottom: 0;
}
.orders-number{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.orders-detail{
    position: relative;
    height: 130rpx;
    padding: 35rpx 20rpx 35rpx 170rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.orders-detail image{
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 150rpx;
    height: 150rpx;
}
.orders-detail view{
    line-height: 60rpx;
}
.orders-detail .orders-status{
    position: absolute;
    right: 20rpx;
    top: 35rpx;
    height: 120rpx;
    line-height: 120rpx;
    color: #70d1c9;
}
.orders-footer{
    height: 60rpx;
    line-height: 60rpx;
    color: #2f2f2f;
    padding:15rpx 30rpx 15rpx 0;
}
.orders-footer .orders-btn{
    float: right;
    width: 170rpx;
    height: 60rpx;
    line-height:60rpx;
    border-radius: 6rpx;
    background: #70d1c9;
    color: #fff;
}


.l-main {
  display: flex;
}
.la {
    height: 10rpx;
    border-bottom: 1px solid #e9e9e9;
}
.lb {
    width: 20rpx;
    height: 20rpx;
    margin: 0rpx 4rpx;
    border-left: 1rpx solid #e9e9e9;
    border-top: 1rpx solid #e9e9e9;
    transform: rotate(45deg);
}

.cates {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: stretch;
  background-color: #fff;
}
.cates .cate {
  width: 30%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cates .cate .img {
  width: 60rpx;
  height: 80rpx;
}
.cates .cate .name {
  font-size: 18rpx;
}

.cates .cate .on {
  color: #70d1c9;
}

.orders-obligation {
  padding: 35rpx 20rpx 35rpx 250rpx;
}
.cart-pro-select{
    position: absolute;
    left: 0rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}
.orders-obligation image {
  left: 60rpx;
}

.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 100rpx 0 80rpx;
    box-sizing: border-box;
    background: #70d1c9;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    position: absolute;
    right: 40rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon image,.order-icon navigator{
  display: block;
  width: 45rpx;
  height: 45rpx;
}
.cart-toatl-price{
    float: right;
    width: 140rpx;   
}
.orders-box {
  padding-bottom:100rpx;
}