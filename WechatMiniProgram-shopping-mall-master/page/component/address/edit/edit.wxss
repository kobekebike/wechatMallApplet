@import '../../../common/styles/common.wxss';

.form-box{
  padding-left: 20rpx;
}
.form-box input{
  width: 100%;
  height: 90rpx;
  color: #999;
}
.form-box .input-placeholder{
    color: #aaa;
}
.form-box button{
    margin:30rpx 30rpx 0 0;
}
.form-box .row-cls{
  display:flex;
  flex-direction:row;
  border-bottom: 1rpx solid #ededed;
}
.form-box .row-cls .row-lab{
  margin-top:30rpx;
  margin-right:10rpx;
  color:red;
}
.region-box{
  border-bottom: 1rpx solid #ededed;
  color: #999;
  line-height: 90rpx;
}
.region-box .region-manage{
    position: relative;
    height: 90rpx;
    text-align: left;
}
.region-box .region-manage::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.region-box .region-manage .row-lab{
  color:red;
  margin-right:10rpx;
}
.default-box{
    color: #999;
    line-height: 90rpx;
    margin-left:25rpx;
}
.default-box .default-manage{
    display:flex;
    flex-direction:row;
    height: 90rpx;
}
.default-box .default-manage .default-left{
  width: 85%;
}
.default-box .default-manage .default-right{
  width: 15%;
}
.default-box .default-manage .default-right .default-switch{
  zoom: 0.55;
}