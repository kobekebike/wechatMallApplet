@import '../../../common/styles/common.wxss';
page{
  height: 100%;
  background: #fcfcfc;
  border: 0rpx;
}
.address-list{
  height: 100%;
  padding-bottom: 46px;
}
.tm{
  width: 100%;
  font-size: 32rpx;
  padding: 0rpx;
}
.m{
    border-bottom: 1px solid #f1f1f1;
    margin: 5rpx auto;
    padding: 10rpx 10rpx 10rpx 20rpx;
    position:relative;
}

.m-data{
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    display: flex;
    flex-direction: column;
}

.m-data-left{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}

.m-data-right{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}

.m-data-top-left{
  font-weight: bold;
  width: 30%;
}

.m-data-top-right{
    width: 70%;
}

.m-data-bottom-left{
  width: 80%;
  font-size: 25rpx;
}

.m-data-top-right-default{
  vertical-align: 12%;
  margin: 15rpx;
  padding-right: 10rpx;
  padding-left: 10rpx;
  font-size: 20rpx;
  background-color: #70d1c9;
  color: #fff;
  border-radius: 50rpx;
}

.btn-plus {
	position: fixed;
	bottom: 0;
	left: 0;
  display: block;
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  text-decoration: none;
  background-color: #fff;
  line-height: 2.55555556;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden;
  border-radius: 0rpx;
}
.add-address-btn{
  color: white;
  background-color:#70d1c9;
  border-radius: 0rpx;
}

.address-list .m-data-edit {
  position: absolute;
	top: 50%;
	right: 15px;
	width: 20px; 
  height: 20px;
  -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
}

.m-data-edit .icon {
    width: 15px; 
    height: 15px;
}