@import '../common/styles/common.wxss';
swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{/**首页中的子标题的字体样式*/
    width: 100%;
    padding:30rpx 100rpx;
    height: 40rpx;
    color: #AB956D;
    text-align: left;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.newest-box{
    padding:0 40rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 325rpx;
    height: 410rpx;
    margin:0 20rpx 20rpx 0;
    border-radius: 10px;
    text-align: center;
    background: #f2f8f8;
}
.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 275rpx;
    height: 275rpx;
    margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 30rpx;
}
.newest-text-price{
    font-size: 32rpx;
    color: #ff7800;
    display:flex;
}
.newest-box .newest-list .goods-cart-img{
    width: 45rpx;
    height: 45rpx;
    margin: 0rpx 10rpx;
}
.to-carts-icon{
    right: 70rpx;
    top: 70rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 10%;
    opacity: .6;
    -webkit-animation: to_cart .3s ease-out;
    animation: to_cart .3s ease-out;
}

.cates {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: stretch;
  padding-bottom: 20rpx;
  background-color: #fafdfd;
}
.cates .cate {
  width: 50%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.cates .cate .img {
  width: 70rpx;
  height: 100rpx;
}
.cates .cate .name {
  color: #70d1c9;
  font-size: 20rpx;
}
.cates .cate .cate-hr{
  width:50%;
  border:1rpx solid #70d1c9;
  margin-top:35rpx;
}

.cates .cate::before {
    position: absolute;
    top: 40rpx;
    left: 50%;
    width: 1px;
    height: 50px;
    content: "";
    background: #70d1c9;
}
.goods-tab-nav{
    display: inline-block;
    width: 25%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #70d1c9;
    border-bottom: 5rpx solid #70d1c9;
}
.goods-content{
  padding-top:30rpx;
}
.cates .cate .cate-num{
  position: absolute;
	top: 27%;
	left: 27.5%;
	width: 20rpx;
  height: 20rpx;
  line-height:20rpx;
  text-align:center;
  -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
  color:rgb(255, 55, 55);
  font-size: 16rpx;
  background-color: #fff;
  border-radius: 50rpx;
  border: 1rpx solid rgb(255, 55, 55);
}
.newest-text-price .newest-text-price-left{
  padding-top:5rpx;
  width:70%;
}
.newest-text-price .newest-text-price-right{
  width:30%;
  text-align:right;
}
.newest-text-price-left .newest-text-price-left-text{
  font-size: 18rpx;
  color: #65716f;
  padding-left:10rpx;
}
