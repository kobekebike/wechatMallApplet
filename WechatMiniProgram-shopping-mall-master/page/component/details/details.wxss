@import '../../common/styles/common.wxss';
@import"../../utils/wxParse/wxParse.wxss";
.goods-box{
    border-bottom: 20rpx solid #f1f5f5;
}
.goods-title{
  margin: 20rpx;
}
.goods-tab-nav{
    display: inline-block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #70d1c9;
    border-bottom: 5rpx solid #70d1c9;
}
.goods-content{
    margin-bottom:90rpx;
}
.goods-price-color{
  padding: 10rpx 0rpx 25rpx 20rpx;
  font-size: 20rpx;
  color: #ff7800;
  border-bottom: 1rpx solid #ededed;
}
.goods-price-color-text{
  font-size: 18rpx;
  color: #65716f;
  padding-left:10rpx;
}
.goods-trait{
  display: flex;
  margin: 20rpx;
  font-size: 20rpx;
  color: #323837;
}
.goods-trait .goods-trait-one{
  width: 20%;
  display: flex;
  flex-direction: row;
}
.goods-trait .goods-trait-two{
  width: 20%;
  display: flex;
  flex-direction: row;
}
.goods-trait-icon {
  align-self: center;
}
.goods-trait-text {
  align-self: center;
}
.goods-price{
  font-size: 48rpx;
}


.swiper_box {
    width: 100%;
    height: 320px;
}
.swiper_box .slide-image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    background-color:#fff;
    border: 1rpx solid #ededed;
}
.cart-footer-content {
  display: flex;
  flex-direction: row;
}
.cart-footer-left{
  width:20%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.cart-footer-left image{
  width:35rpx;
  height:35rpx;
}
.cart-footer-left-text{
  color:#c7c7cb;
  font-size:22rpx;
  line-height:30rpx;
}
.cart-footer-middle{
  width:40%;
  text-align: center;
  background-color: #ff7800;
  color: #fff;
}
.cart-footer-right{
  width:40%;
  text-align: center;
  background-color: rgb(255, 36, 36);
  color: #fff;
}