    <view class="newest-box">
      <view wx:for="{{productGoods}}" wx:key="{{index}}" wx: class="newest-list">
        <navigator url="details/details?productDetail={{item.productDetail}}&productTitle={{item.productTitle}}&productType={{item.productType}}&productPrice={{item.productPrice}}&productFilePath={{item.productFilePath}}&productDescribe={{item.productDescribe}}">
          <image src="{{item.productFilePath}}"></image>
          <view class="newest-text">
            <text>{{item.productTitle}}</text>
          </view>
          <view class="newest-text-price">
            <text>￥ {{item.productPrice}}</text> 加入购物车{{item.productDetail}}
          </view>
        </navigator>
      </view>
     
    </view>
  </view>
