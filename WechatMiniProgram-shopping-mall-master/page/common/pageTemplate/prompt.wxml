<template name="prompt">
	<view class="prompt-container" hidden="{{ prompt.hidden || prompt2.hidden || prompt3.hidden }}">
	    <view class="prompt-message">
	        <image src="{{ prompt.icon || prompt2.icon || prompt3.icon || '../../pages/image/icon5.png' }}" class="prompt-icon" />
	        <view class="prompt-title">{{ prompt.title || prompt2.title || prompt3.title || '空空如也' }}</view>
	        <view class="prompt-text">{{ prompt.text || prompt2.text || prompt3.text || '暂时没有相关数据' }}</view>
	    </view>
	</view>
</template>                                                                                                                  